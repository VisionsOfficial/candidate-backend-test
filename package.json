{
    "name": "visions-contract-api-candidate-test",
    "version": "1.0.0",
    "description": "Candidate Test - API for Visions Contractualization Service",
    "main": "index.js",
    "author": "Felix Bole",
    "scripts": {
        "start": "node dist/index.js",
        "predev": "npm run swagger",
        "prebuild": "npm run swagger",
        "build": "tsc",
        "dev": "concurrently \"nodemon\" \"nodemon -x tsoa spec\"",
        "swagger": "tsoa spec",
        "test": "jest --coverage"
    },
    "dependencies": {
        "@types/jsonwebtoken": "^9.0.4",
        "crypto-js": "^4.2.0",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^7.6.3",
        "morgan": "^1.10.0",
        "swagger-ui-express": "^5.0.0",
        "tsoa": "^5.1.1",
        "winston": "^3.11.0"
    },
    "devDependencies": {
        "@types/express": "^4.17.20",
        "@types/jest": "^29.5.6",
        "@types/mongoose": "^5.11.97",
        "@types/morgan": "^1.9.7",
        "@types/node": "^20.8.8",
        "@types/supertest": "^2.0.15",
        "@types/swagger-ui-express": "^4.1.5",
        "concurrently": "^8.2.2",
        "jest": "^29.7.0",
        "nodemon": "^3.0.1",
        "rimraf": "^5.0.5",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2"
    },
    "nodemonConfig": {
        "watch": [
            "src"
        ],
        "ext": "ts",
        "exec": "ts-node src/index.ts"
    }
}
